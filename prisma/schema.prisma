datasource db {
  provider = "sqlserver"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id       Int      @id @default(autoincrement())
  email    String   @unique
  password String
  rules    Rule[]
  logs     Log[]    // Adicionei este campo para o relacionamento inverso
}

model Rule {
  id     Int    @id @default(autoincrement())
  name   String
  users  User[]
}

model Log {
  id        Int      @id @default(autoincrement())
  action    String
  createdAt DateTime @default(now())
  user      User?    @relation(fields: [userId], references: [id])
  userId    Int?
}